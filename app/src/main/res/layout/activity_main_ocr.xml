<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pageCont"
    tools:context=".MainActivityOcr">


    <ImageView
        android:id="@+id/estemarhId"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/estmarhforth"></ImageView>

    <Button
        android:id="@+id/BtnOcr"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/CarStation2"
        android:fontFamily="sans-serif-black"
        android:padding="2dp"
        android:text="DONE"
        android:textColor="#FFFFFF"
        android:textSize="16sp"

        ></Button>

    <Button
        android:id="@+id/BtnOcrBrowse"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/CarStation2"
        android:fontFamily="sans-serif-black"
        android:padding="2dp"
        android:text="BROWSE"
        android:textColor="#FFFFFF"
        android:textSize="16sp"

        ></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="150dp"
        android:text="Text"
        android:id="@+id/TextViewOcr"

        ></TextView>




</RelativeLayout>