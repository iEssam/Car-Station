<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F7FFFFFF">
<!--    tools:context=".MainActivity_Card_History">-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:background="#F7FFFFFF">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="540dp"
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                android:padding="20dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reservation History"
                        android:textAllCaps="true"
                        android:textSize="24sp" />

                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_recycler_history"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                </androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:id="@+id/none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAllCaps="false"
                    android:textSize="16sp" />

            </LinearLayout>
    </ScrollView>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">


        <Button
            android:id="@+id/DeleteReservation"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:backgroundTint="@color/redbutton"
            android:fontFamily="sans-serif-black"
            android:padding="1dp"
            android:text="DELTE an Appintment"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </RelativeLayout>


</LinearLayout>