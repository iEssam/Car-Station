<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_brand_Second"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_ford_logo_foreground" />

    <TextView
        android:id="@+id/text_view_name_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_view_brand_Second"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/image_view_brand_Second"
        android:gravity="center"
        android:text="Sonata"
        android:textColor="@color/black"
        android:textSize="16dp" />

</RelativeLayout>