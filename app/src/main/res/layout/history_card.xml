<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="186dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp"
    android:layout_marginTop="20dp"
    android:id="@+id/history_Cardview"
    app:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/background_color_history"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:background="@color/card2"
        android:padding="5dp">


        <ImageView
            android:id="@+id/car_image_history"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/car" />

        <TextView
            android:id="@+id/Date_history_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/car_image_history"
            android:text="Date : "
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/Date_history"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/Location_history_label"
            android:text="2022"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/Time_history_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Date_history_label"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:text="Time : "
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/Location_history_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Time_history_label"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:text="Location : "
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/Center_history_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Location_history_label"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:text="Center : "
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/CarName_history_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Center_history_label"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:text="Car : "
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/Time_history"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Date_history"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/Location_history_label"
            android:text="10:30"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/Location_history"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Time_history"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/Location_history_label"
            android:text="AL-Bsateen"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/Center_history"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Location_history"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/Location_history_label"
            android:text=" :"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/CarName_history"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Center_history"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/Location_history_label"
            android:text=" :"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/Center_Link_history"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_below="@+id/car_image_history"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_directions"
            app:tint="@color/black" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>